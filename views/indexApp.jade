extends layout

block moreStyle
	link(rel='stylesheet', href='/stylesheets/indexAppStyle.css')


block normalBody

	div.navbar.navbar-static-top
		div.navbar-header
			h1.navbar-brand #{title}

	br
	div(id='svgApp')
		label Choose one of the rendering engines
		li
			a(href='/svg') SVG engine (has more features but not recommended for large datasets)
		li
			a(href='/webgl') WebGl engine (less features but great for large datasets)
	br

block scripts
	script(type='text/javascript', src='/javascripts/jquery-2.1.3.min.js')
	script(type='text/javascript', src='/javascripts/jquery-ui.min.js')
	script(type='text/javascript', src='/javascripts/bootstrap.js')
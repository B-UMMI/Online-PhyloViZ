	script(type='text/javascript', src='/javascripts/nv.d3.min.js')
	script(type='text/javascript', src='http://code.jquery.com/jquery-2.1.3.min.js')
	script(type='text/javascript', src='http://code.jquery.com/ui/1.11.0/jquery-ui.min.js')
	script(type='text/javascript', src='/javascripts/bootstrap.js')
	script(type='text/javascript', src='/javascripts/SVG/fish_eye.js')
	script(type='text/javascript', src='/javascripts/SVG/search_nodes.js')
	script(type='text/javascript', src='/javascripts/SVG/highlight_nodes.js')
	script(type='text/javascript', src='/javascripts/SVG/colorAttributes.js')
	script(type='text/javascript', src='/javascripts/SVG/change_Visual_Properties.js')
	script(type='text/javascript', src='/javascripts/SVG/viewInfo.js')

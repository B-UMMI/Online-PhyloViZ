extends ../layout

block title
	div.indextitleLocation(onclick="javascript:location.href='/'")
		img.phylovizImage(src = '/images/logo.png')
		label.title #{title}

block login
	div(id="indexuserLocation")
		p Tutorial

block API
	div.apiBody
		div(style="width:100%; text-align:center;margin-bottom: 2%;")
			h1 Tutorial
		div(style="width:100%;")
			ol
				li 
					a(href="#indroduction") Introduction
				li 
					a(href="#sections") Sections
					ul
						li(data-toggle="collapse" data-target="#loginCollapse") 
							a Login
						div(id="loginCollapse" class="collapse")
							ul
								li
									a(href="#requirements") Requirements
								li
									a(href="#steps") Steps
								li
									a(href="#advantages") Advantages
						li(data-toggle="collapse" data-target="#uploadCollapse") 
							a Upload
						div(id="uploadCollapse" class="collapse")
							ul
								li
									a(href="#dataformats") Data formats
								li
									a(href="#publicorprivate") Public or private
						li(data-toggle="collapse" data-target="#publicCollapse") 
							a Public data bases
						div(id="publicCollapse" class="collapse")
							ul
								li
									a(href="#selectpublic") Select public data sets
								li
									a(href="#putpublic") Put public
						li(data-toggle="collapse" data-target="#visualCollapse") 
							a Visualization
						div(id="visualCollapse" class="collapse")
							ul
								li
									a(href="#assigncolors") Assign Colors
								li
									a(href="#graphicproperties") Graphic Properties
								li
									a(href="#selection") Selection
								li
									a(href="#search") Search
								li
									a(href="#exportvisual") Export
						li(data-toggle="collapse" data-target="#tablesCollapse") 
							a Tables
						div(id="tablesCollapse" class="collapse")
							ul
								li
									a(href="#filter") Filter
								li
									a(href="#linktotree") Link to Tree
								li
									a(href="#exporttable") Export
						li(data-toggle="collapse" data-target="#operationsCollapse") 
							a Operations
						div(id="operationsCollapse" class="collapse")
							ul
								li
									a(href="#nlv") n Locus Variant (nLV)
								li
									a(href="#treecut") Tree cut-off
						li(data-toggle="collapse" data-target="#matrixCollapse") 
							a Distance Matrix
						div(id="matrixCollapse" class="collapse")
							ul
								li
									a(href="#compute") Compute distances
								li
									a(href="#order") Order
								li
									a(href="#select") Select
								li
									a(href="#exportmatrix") Export


			div.tutorialParts(id="introduction")
				h3 1 - INTRODUCTION
				include introduction.jade


			div.tutorialParts(id="sections")
				h3 2 - SECTIONS
				div.tutorialParts(id="loginText")
					include loginText.jade
				div.tutorialParts(id="uploadText")
					include uploadText.jade
				div.tutorialParts(id="publicDataText")
					include publicDataText.jade
				div.tutorialParts(id="visualizationText")
					include visualizationText.jade
				div.tutorialParts(id="tablesText")
					include tablesText.jade
				div.tutorialParts(id="operationsText")
					include operationsText.jade
				div.tutorialParts(id="distanceText")
					include distanceText.jade

			div(id="top-link-block" style="display:none;")
				button(href="#top" class="btn btn-info"  onclick="$('html,body').animate({scrollTop:0},'slow');return false;") Back to Top

				



block scripts
	script(type='text/javascript', src='/javascripts/dependencies/jquery-2.1.3.min.js')
	script(type='text/javascript', src='/javascripts/dependencies/jquery.form.js')
	script(type='text/javascript', src='/javascripts/dependencies/jquery-ui.min.js')
	script(type='text/javascript', src='/javascripts/dependencies/bootstrap.js')
	script(type='text/javascript', src='/javascripts/dependencies/bootstrap-select.js')
	script(type='text/javascript', src='/javascripts/dependencies/datatables.min.js')
	script(type='text/javascript', src='/javascripts/dependencies/jquery.dataTables.js')
	script(type='text/javascript', src='/javascripts/App/adjustElements/adjustElementsAPI.js')
	script(type='text/javascript', src='/javascripts/App/adjustElements/backToTop.js')

